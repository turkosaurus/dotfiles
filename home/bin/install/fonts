#!/usr/bin/env bash


declare url
if [[ $# -ne 1 ]]; then
    url="https://github.com/ryanoasis/nerd-fonts/releases/download/v3.4.0/RobotoMono.zip"
    echo "Usage: $0 <font-url.zip>"
    echo "Warn: invalid usage, falling back to default url."
    echo "Default Url: $url"
    echo
else
    url="$1"
fi

if [[ $(uname) == "Linux" ]]; then
    mkdir -p ~/.local/share/fonts
    curl -L "$url" -o /tmp/font.zip
    unzip -o /tmp/font.zip -d ~/.local/share/fonts
    fc-cache -f -v
else
    echo "$0: unsupported OS"
fi
